import java.io.*;
import java.util.*;
public class Solution { 
    public static boolean isDecreasingSeq(String s, long num) {
        int index = 0;
        while (index < s.length()) {
            String cur = Long.toString(num);
            if (s.startsWith(cur, index)) {
                index += cur.length();
                num--;
            } else {
                return false;
            }
        }
        return true;
    }
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int N = Integer.parseInt(sc.nextLine());
        for (int i = 0; i < N; i++) {
            String str = sc.nextLine();
            boolean found = false;
            for (int len = 1; len <= str.length() / 2; len++) {
                String firstNumStr = str.substring(0, len);
                if (firstNumStr.startsWith("0")) continue;
                long firstNum = Long.parseLong(firstNumStr);
                if (isDecreasingSeq(str, firstNum)) {
                    System.out.println(firstNumStr);
                    found = true;
                    break;
                }
            }
            if (!found) {
                System.out.println("NO");
            }
        }
        sc.close();
    }
}
